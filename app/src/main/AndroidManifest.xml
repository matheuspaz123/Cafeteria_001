<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.cafeteria_001">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/icone_cooffee"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/icone_cooffee"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".view.MenuButtonNavigation" />
        <activity android:name=".view.ProductMenuActivity" />
        <activity android:name=".view.SignUpActivity" />
        <activity android:name=".view.SignInActivity" />
        <activity android:name=".view.LoginActivity" />
        <activity android:name=".view.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>