<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.ProductMenuActivity">

    <TextView
        android:id="@+id/text_product_menu"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="24dp"
        android:text="Menu"
        android:textColor="@color/font_marron_claro"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageButton
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@color/font_white"
        android:src="@drawable/ic_arrow_back"
        app:layout_constraintBottom_toBottomOf="@+id/text_product_menu"
        app:layout_constraintLeft_toLeftOf="@+id/text_product_menu"
        app:layout_constraintTop_toTopOf="@+id/text_product_menu" />

    <View
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:background="@color/font_separation_bar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_product_menu" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/test"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_product_menu">

        <ImageView
            android:id="@+id/image_product_espresso"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/ic_coffee_cup_espresso"
            app:layout_constraintEnd_toStartOf="@+id/text_product_espresso"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text_product_espresso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Espresso"
            android:padding="32dp"
            android:textColor="@color/font_marron_claro"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@id/image_product_espresso"
            app:layout_constraintStart_toEndOf="@+id/image_product_espresso"
            app:layout_constraintTop_toTopOf="@id/image_product_espresso" />
        <View
            android:layout_width="0dp"
            android:layout_height="4dp"
            android:background="@color/font_separation_bar"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/image_product_espresso" />


    </androidx.constraintlayout.widget.ConstraintLayout>


    <Button
        android:id="@+id/test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>