<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.ProductMenuActivity">

    <TextView
        android:id="@+id/text_product_menu"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="18dp"
        android:text="@string/menu"
        android:textColor="@color/font_marron_claro"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageButton
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@color/font_white"
        android:src="@drawable/ic_arrow_back"
        app:layout_constraintBottom_toBottomOf="@+id/text_product_menu"
        app:layout_constraintLeft_toLeftOf="@+id/text_product_menu"
        app:layout_constraintTop_toTopOf="@+id/text_product_menu" />

    <View
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:background="@color/font_separation_bar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_product_menu" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/image_product_home"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_product_menu">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_scrooll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/image_product_espresso"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_marginStart="32dp"
                android:src="@drawable/ic_coffee_cup_espresso"
                app:layout_constraintEnd_toStartOf="@+id/text_product_espresso"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/text_product_espresso"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="32dp"
                android:text="@string/espresso"
                android:textColor="@color/font_marron_claro"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="@id/image_product_espresso"
                app:layout_constraintStart_toEndOf="@+id/image_product_espresso"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                android:src="@drawable/ic_baseline_arrow_forward_ios_24"
                app:layout_constraintBottom_toTopOf="@id/view_line_expresso"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"

                />

            <View
                android:id="@+id/view_line_expresso"
                android:layout_width="0dp"
                android:layout_height="4dp"
                android:layout_marginTop="8dp"
                android:background="@color/font_separation_bar"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/image_product_espresso" />

            <!-- =================================================================== !-->

            <ImageView
                android:id="@+id/image_product_cappuccino"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="32dp"
                android:src="@drawable/ic_coffee_cup_cappuccino"
                app:layout_constraintEnd_toStartOf="@+id/text_product_cappuccino"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/image_product_espresso" />

            <TextView
                android:id="@+id/text_product_cappuccino"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="32dp"
                android:text="@string/cappuccino"
                android:textColor="@color/font_marron_claro"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="@id/image_product_cappuccino"
                app:layout_constraintStart_toEndOf="@+id/image_product_cappuccino"
                app:layout_constraintTop_toTopOf="@id/image_product_cappuccino" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                android:src="@drawable/ic_baseline_arrow_forward_ios_24"
                app:layout_constraintBottom_toTopOf="@id/view_line_cappuccino"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/view_line_expresso"

                />

            <View
                android:id="@+id/view_line_cappuccino"
                android:layout_width="0dp"
                android:layout_height="4dp"
                android:layout_marginTop="8dp"
                android:background="@color/font_separation_bar"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/image_product_cappuccino" />

            <!-- =================================================================== !-->

            <ImageView
                android:id="@+id/image_product_macciato"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="32dp"
                android:src="@drawable/ic_coffee_cup_macciato"
                app:layout_constraintEnd_toStartOf="@+id/text_product_macciato"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/image_product_cappuccino" />

            <TextView
                android:id="@+id/text_product_macciato"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="32dp"
                android:text="@string/macciato"
                android:textColor="@color/font_marron_claro"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="@id/image_product_macciato"
                app:layout_constraintStart_toEndOf="@+id/image_product_macciato"
                app:layout_constraintTop_toTopOf="@id/image_product_macciato" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                android:src="@drawable/ic_baseline_arrow_forward_ios_24"
                app:layout_constraintBottom_toTopOf="@id/view_line_macciato"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/view_line_cappuccino"

                />

            <View
                android:id="@+id/view_line_macciato"
                android:layout_width="0dp"
                android:layout_height="4dp"
                android:layout_marginTop="8dp"
                android:background="@color/font_separation_bar"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/image_product_macciato" />

            <!-- =================================================================== !-->

            <ImageView
                android:id="@+id/image_product_mocha"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="32dp"
                android:src="@drawable/ic_coffee_cup_mocha"
                app:layout_constraintEnd_toStartOf="@+id/text_product_mocha"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/image_product_macciato" />

            <TextView
                android:id="@+id/text_product_mocha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="32dp"
                android:text="@string/mocha"
                android:textColor="@color/font_marron_claro"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="@id/image_product_mocha"
                app:layout_constraintStart_toEndOf="@+id/image_product_mocha"
                app:layout_constraintTop_toTopOf="@id/image_product_mocha" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                android:src="@drawable/ic_baseline_arrow_forward_ios_24"
                app:layout_constraintBottom_toTopOf="@id/view_line_mocha"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/view_line_macciato"

                />

            <View
                android:id="@+id/view_line_mocha"
                android:layout_width="0dp"
                android:layout_height="4dp"
                android:layout_marginTop="8dp"
                android:background="@color/font_separation_bar"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/image_product_mocha" />

            <!-- =================================================================== !-->

            <ImageView
                android:id="@+id/image_product_latte"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="32dp"
                android:src="@drawable/ic_coffee_cup_latte"
                app:layout_constraintEnd_toStartOf="@+id/text_product_latte"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/image_product_mocha" />

            <TextView
                android:id="@+id/text_product_latte"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="32dp"
                android:text="@string/latte"
                android:textColor="@color/font_marron_claro"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="@id/image_product_latte"
                app:layout_constraintStart_toEndOf="@+id/image_product_latte"
                app:layout_constraintTop_toTopOf="@id/image_product_latte" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                android:src="@drawable/ic_baseline_arrow_forward_ios_24"
                app:layout_constraintBottom_toTopOf="@id/view_line_latte"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/view_line_mocha"

                />

            <View
                android:id="@+id/view_line_latte"
                android:layout_width="0dp"
                android:layout_height="4dp"
                android:layout_marginTop="8dp"
                android:background="@color/font_separation_bar"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/image_product_latte" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>


    <View
        android:layout_width="0dp"
        android:layout_height="3dp"
        android:layout_marginBottom="8dp"
        android:background="@color/font_separation_bar"
        app:layout_constraintBottom_toTopOf="@+id/image_product_home"
        app:layout_constraintLeft_toLeftOf="parent" />

    <ImageView
        android:id="@+id/image_product_home"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_margin="8dp"
        android:src="@drawable/ic_baseline_home"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/image_product_location" />

    <ImageView
        android:id="@+id/image_product_location"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_baseline_location"
        app:layout_constraintBottom_toBottomOf="@id/image_product_home"
        app:layout_constraintLeft_toRightOf="@id/image_product_home"
        app:layout_constraintRight_toLeftOf="@+id/image_product_coffee_cup" />

    <ImageView
        android:id="@+id/image_product_coffee_cup"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_baseline_coffee_cup"
        app:layout_constraintBottom_toBottomOf="@id/image_product_location"
        app:layout_constraintLeft_toRightOf="@id/image_product_location"
        app:layout_constraintRight_toLeftOf="@+id/image_product_account" />

    <ImageView
        android:id="@+id/image_product_account"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_baseline_account_circle"
        app:layout_constraintBottom_toBottomOf="@id/image_product_coffee_cup"
        app:layout_constraintLeft_toRightOf="@id/image_product_coffee_cup"
        app:layout_constraintRight_toRightOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>