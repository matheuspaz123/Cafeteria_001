<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.SplashFragment">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/splash_marron">

        <ImageView
            android:id="@+id/icon_coffee"
            android:layout_width="150dp"
            android:layout_height="330dp"
            android:layout_marginLeft="128dp"
            android:layout_marginRight="128dp"
            android:src="@drawable/ic_coffee"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/first_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="280dp"
            android:fontFamily="@font/allura"
            android:text="@string/coffee_shop"
            android:textSize="64sp"
            android:textStyle="italic"
            android:textColor="@color/font_splash"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:layout_width="match_parent"
            android:layout_height="6dp"
            android:layout_marginLeft="42dp"
            android:layout_marginRight="42dp"
            android:layout_marginBottom="15dp"
            android:background="@color/font_splash"
            app:layout_constraintBottom_toTopOf="@+id/first_text"
            app:layout_constraintLeft_toLeftOf="@+id/first_text"
            app:layout_constraintRight_toRightOf="@+id/first_text" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>